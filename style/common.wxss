body {
  background-color: #f2f2f2;
}

.no-border {
  border: none !important;
}

/* margin */

.margin-bottom-30 {
  margin-bottom: 60rpx;
}

.margin-top-30 {
  margin-top: 60rpx;
}

/* common */

.common__textLine {
  padding: 30rpx 0 20rpx;
}

.common__textLine text {
  font-size: 24rpx;
  color: #525252;
}

/* 换一批 */

.common-change-batch {
  padding: 10rpx 30rpx;
  height: 70rpx;
  box-sizing: border-box;
}

.common-change-batch .common-change {
  position: relative;
  border-radius: 35rpx;
  -webkit-border-radius: 35rpx;
  -moz-border-radius: 35rpx;
  -ms-border-radius: 35rpx;
  -o-border-radius: 35rpx;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #1aa2fe;
}

.common-top {
  display: flex;
  align-items: center;
}

.common-title,
.common-laster.active,
.common-current-title.active {
  font-size: 36rpx;
  font-weight: 500;
}

.common-laster,
.common-current-title {
  font-size: 26rpx;
  font-weight: 500;
}

.common-current-title {
  margin-right: 20rpx;
}

.isShow {
  display: block !important;
}

.isHide {
  display: none !important;
}

/* loading */

.common-loading--default {
  display: flex;
  justify-content: center;
}

/* 数据加载完 */

.common-dataless--default {
  text-align: center;
  font-size: 26rpx;
  font-weight: 300;
  color: #d2d2d2;
}
