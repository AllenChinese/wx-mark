.vertical-items,
.horizontal-items,
.common-items,
.class-items {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

/* 竖排 */

.vertical-item {
  margin-bottom: 20rpx;
  border: 1rpx solid #d2d2d2;
  border-radius: 10rpx;
  width: 48%;
  box-sizing: border-box;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
}

.vertical-item--preview image {
  border-radius: 10rpx 10rpx 0 0;
  width: 100%;
  height: 180rpx;
  -webkit-border-radius: 10rpx 10rpx 0 0;
  -moz-border-radius: 10rpx 10rpx 0 0;
  -ms-border-radius: 10rpx 10rpx 0 0;
  -o-border-radius: 10rpx 10rpx 0 0;
}

.vertical-item--title {
  padding: 5rpx 20rpx 0;
  font-family: 'PingFangSC-Semibold';
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.vertical-item--msg {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 24rpx;
  font-family: 'PingFangSC-Regular';
  color: #8490a6;
}

/* 横排 */

.horizontal-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  border: 1rpx solid #d2d2d2;
  border-radius: 10rpx;
  width: 100%;
  box-sizing: border-box;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
}

.horizontal-item--preview {
  height: 200rpx;
}

.horizontal-item--preview image {
  border-radius: 10rpx 0 0 10rpx;
  width: 300rpx;
  height: 200rpx;
  -webkit-border-radius: 10rpx 0 0 10rpx;
  -moz-border-radius: 10rpx 0 0 10rpx;
  -ms-border-radius: 10rpx 0 0 10rpx;
  -o-border-radius: 10rpx 0 0 10rpx;
}

.horizontal-item--title {
  padding: 15rpx 20rpx 10rpx;
  font-family: 'PingFangSC-Semibold';
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.horizontal-item--desc {
  padding: 5rpx 20rpx 0;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-family: 'PingFangSC-Regular';
  color: #8490a6;
}

.horizontal-item--msg {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 20rpx 0;
  font-size: 24rpx;
  font-family: 'PingFangSC-Regular';
  color: #8490a6;
}

/* 分类 */

.class-item {
  display: flex;
  justify-content: space-between;
  height: 180rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  width: 48%;
  box-sizing: border-box;
  -webkit-border-radius: 20rpx;
  -moz-border-radius: 20rpx;
  -ms-border-radius: 20rpx;
  -o-border-radius: 20rpx;
  background-color: #f8f8f8;
}

.class-item--msg {
  position: relative;
  padding: 30rpx;
  width: 100%;
  height: 100%;
}

.class-item--msg-title {
  font-size: 30rpx;
  font-family: 'PingFangSC-Semibold';
}

.class-item--msg-total {
  margin-top: 50rpx;
  font-size: 24rpx;
  font-family: 'PingFangSC-Regular';
  color: #8490a6;
}

.class-item--preview {
  display: flex;
  align-items: flex-end;
  height: 100%;
}

.class-item--preview image {
  border-radius: 0 0 20rpx 0;
  width: 100rpx;
  height: 120rpx;
  -webkit-border-radius: 0 0 20rpx 0;
  -moz-border-radius: 0 0 20rpx 0;
  -ms-border-radius: 0 0 20rpx 0;
  -o-border-radius: 0 0 20rpx 0;
}
