@import "../../style/common.wxss";
/* 为你推荐 */

.module-horizontal-part {
  padding: 15rpx 30rpx;
}

.module-horizontal-part .horizontal-items {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.module-horizontal-part .horizontal-item {
  margin-bottom: 20rpx;
  border: 1rpx solid #d2d2d2;
  border-radius: 10rpx;
  width: 48%;
  box-sizing: border-box;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
}

.module-horizontal-part .horizontal-item--preview image {
  border-radius: 10rpx 10rpx 0 0;
  width: 100%;
  height: 180rpx;
  -webkit-border-radius: 10rpx 10rpx 0 0;
  -moz-border-radius: 10rpx 10rpx 0 0;
  -ms-border-radius: 10rpx 10rpx 0 0;
  -o-border-radius: 10rpx 10rpx 0 0;
}

.module-horizontal-part .horizontal-item--title {
  padding: 5rpx 20rpx 0;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.module-horizontal-part .horizontal-item--msg {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 24rpx;
}
