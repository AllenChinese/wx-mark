.detailPage__container {
  position: relative;
}

.detailPage__container .preview {
  z-index: -1;
  position: relative;
  width: 100%;
  height: 400rpx;
}

.detailPage__container .preview image {
  width: 100%;
  height: 100%;
}

.detailPage__container .preview::after {
  position: absolute;
  content: " ";
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .3);
}

.detailPage__container .msg {
  padding: 0 50rpx;
  transform: translate3d(0, -180rpx, 0);
  -webkit-transform: translate3d(0, -180rpx, 0);
  -moz-transform: translate3d(0, -180rpx, 0);
  -ms-transform: translate3d(0, -180rpx, 0);
  -o-transform: translate3d(0, -180rpx, 0);
}

.detailPage__container .msg .msg-line-one {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  font-size: 24rpx;
  color: #d2d2d2;
}

.msg-read {
  margin-right: 20rpx;
}

.detailPage__container .msg .msg-line-two {
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  font-size: 32rpx;
  color: #fff;
}

.detailPage__container .msg .msg-line-three {
  padding: 35rpx 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 0 10rpx 0 #d2d2d2;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
}

.detailPage__container .msg-line-three .msg-desc,
.detailPage__container .msg-line-three .msg-time,
.detailPage__container .msg-line-three .msg-location {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #727272;
}

.detailPage__container .msg-line-three .msg-time,
.detailPage__container .msg-line-three .msg-location {
  font-size: 24rpx;
}

.detailPage__container .msg-line-three .msg-location {
  margin-bottom: 0;
}

.msg-detail {
  transform: translate3d(0, -150rpx, 0);
  padding: 30rpx 35rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  -webkit-transform: translate3d(0, -150rpx, 0);
  -moz-transform: translate3d(0, -150rpx, 0);
  -ms-transform: translate3d(0, -150rpx, 0);
  -o-transform: translate3d(0, -150rpx, 0);
  color: #727272;
}
