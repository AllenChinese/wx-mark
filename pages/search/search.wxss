/* 历史搜索 */

.hostory-search__container {
  padding: 30rpx 30rpx 0;
}

.title-bar {
  display: flex;
  justify-content: space-between;
}

.title-bar .title {
  font-size: 28rpx;
  color: #777;
  font-weight: 300;
}

.hostory-search__container .hostory-items {
  display: flex;
  flex-wrap: wrap;
  justify-content: start;
  margin-top: 20rpx;
}

.hostory-search__container .hostory-item {
  position: relative;
  margin: 0 30rpx 20rpx 0;
  padding: 15rpx 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid #d2d2d2;
  font-size: 22rpx;
  background-color: #f2f2f2;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
}

.hostory-item .delete-btn {
  position: absolute;
  display: none;
  top: -10rpx;
  right: -10rpx;
}

.hot-search__container {
  padding: 30rpx 30rpx 0;
}

.hot-search__container .title {
  position: relative;
}

.hot-search__container .hot-ico {
  position: absolute;
}

.hot-search__container .change-list {
  padding: 5rpx 10rpx;
  border: 1rpx solid #d2d2d2;
  font-size: 24rpx;
}

.hot-search__container .change-list:active {
  background-color: rgba(0, 0, 0, .1);
}

.hot-search__container .hot-items-tip {
  display: block;
  margin: 30rpx auto 0;
  width: 300rpx;
  font-size: 24rpx;
  color: #d2d2d2;
}

.hot-search__container .hot-item {
  border-bottom: .5rpx solid #e2e2e2;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}

.hot-search__container .hot-item .hot-item-num {
  display: inline-block;
  margin-right: 10rpx;
  padding: 5rpx;
  border-radius: 8rpx;
  width: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .3);
  -webkit-border-radius: 8rpx;
  -moz-border-radius: 8rpx;
  -ms-border-radius: 8rpx;
  -o-border-radius: 8rpx;
}

.hot-search__container .hot-item:active {
  background-color: #e2e2e2;
}

/* number 颜色 */

.hot-search__container .hot-item:nth-of-type(1) .hot-item-num {
  background-color: #f15a22;
}

.hot-search__container .hot-item:nth-of-type(2) .hot-item-num {
  background-color: #ff6500;
}

.hot-search__container .hot-item:nth-of-type(3) .hot-item-num {
  background-color: #fdb933;
}
