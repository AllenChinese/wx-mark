.meQuestionPage__container {
  padding-top: 10rpx;
  background-color: #f2f2f2;
}

.meQuestionPage__container .title,
.meQuestionPage__container .tip {
  font-size: 26rpx;
  font-weight: 300;
  color: #b2b2b2;
}

.meQuestionPage__container .tip {
  margin: 20rpx 0 30rpx;
  text-align: center;
  color: #a061ff;
  font-family: 'PingFangSC-Semibold';
}

.meQuestionPage__container .title {
  margin: 10rpx 0 10rpx 10rpx;
}

.submit-section {
  /*padding: 30rpx 180rpx;
  */
  margin-top: 30rpx;
  padding: 20rpx;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.submit-section .custom-class-submit {
  border-radius: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  font-weight: 400;
  letter-spacing: 3rpx;
  background-color: #a061ff;
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  -ms-border-radius: 0;
  -o-border-radius: 0;
}

.submit-section .custom-class-submit.active {
  background-color: rgba(160, 97, 255, .85);
}
