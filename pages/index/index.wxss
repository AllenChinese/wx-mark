/**index.wxss**/

.indexPage__container {
  position: relative;
  width: 100%;
}

.common__search-container {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  padding: 0 20rpx;
  background-color: #fff;
}

.common__search-container .current-city {
  margin-right: 40rpx;
}

.common__search-container .location-logo {
  vertical-align: middle;
}

.common__search-container .city-name {
  margin-left: 4rpx;
  font-size: 28rpx;
}

.common__searchBar {
  position: relative;
  width: 70%;
}

.common__searchBar .search-ico {
  position: absolute;
  top: 50%;
  left: 20rpx;
  margin-top: -7px;
}

.common__searchBar .common__searchBar--input {
  padding: 8rpx 30rpx 4rpx 60rpx;
  border-radius: 10rpx;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
  caret-color: #aaa;
  font-size: 24rpx;
  color: #555;
  background-color: #f2f2f2;
}

.common__searchBar .input-placeholder {
  font-size: 24rpx;
}

.swiper-container {
  width: 100%;
  height: 380rpx;
}

swiper {
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}
