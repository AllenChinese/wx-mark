<view class="indexPage__container">
  <view class="common__search-container">
    <view class="current-city" bind:tap="pageToCity">
      <van-icon class="location-logo" name="location-o" size="14px" />
      <text class="city-name">全国</text>
    </view>
    <!-- searchBar -->
    <view class="common__searchBar">
      <van-field left-icon="search" clearable adjust-position class="common__searchBar-field" input-class="common__searchBar-input" value="{{ searchValue }}" placeholder="搜索精彩活动" border="{{ false }}" bind:change="searchOnChange" />
    </view>
  </view>
  <view class="swiper-container">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}" wx:key="item">
        <swiper-item>
          <image src="{{item}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 个性选择 -->
  <view class="personal-choose-area">
    <view class="personal-choose w100h35">友情</view>
    <view class="personal-choose w180h35">骚话</view>
    <view class="personal-choose w240h35">爱情</view>
    <view class="personal-choose w100h35">古典</view>
    <view class="personal-choose w240h35">名言</view>
    <view class="personal-choose w180h35">宇宙</view>
    <view class="personal-choose w240h35">莎士比亚</view>
    <view class="personal-choose w180h35">文学</view>
    <view class="personal-choose w240h35">韩寒</view>
    <view class="personal-choose w240h35">程序员</view>
    <view class="personal-choose w240h35">1024</view>
  </view>
</view>