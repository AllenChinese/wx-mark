/* pages/activity/activity.wxss */

page {
  height: 100%;
  background-color: #f2f2f2;
}

.activityPage__container {
  height: 90%;
}

.activityPage__container .activity-items {
  padding: 40rpx 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.activityPage__container .swiper-container {
  width: 100%;
  height: 100%;
}

.activityPage__container swiper {
  height: 100%;
}

.activityPage__container swiper-item {
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 100%;
}

.activity-items .item-container {
  height: 100%;
  background-color: #fff;
  /* 提供圆角 */
}

.slide-image {
  width: 100%;
  height: 400rpx;
  /* 提供圆角 */
}

.activityPage__container .activity-bar {
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  padding: 20rpx;
  border-top: 1rpx solid #e2e2e2;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.activityPage__container .activity-bar--btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  font-weight: 400;
  letter-spacing: 3rpx;
  background-color: #65c294;
}

.activityPage__container .activity-bar--tab {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
}

.activityPage__container .activity-bar--tab .tab-ico {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  line-height: 80rpx;
}
