/* pages/activity/activity.wxss */

page {
  height: 100%;
  background-color: #f2f2f2;
}

.activityPage__container {
  height: 90%;
}

.activityPage__container .activity-items {
  padding: 40rpx 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.activityPage__container .swiper-container {
  width: 100%;
  height: 100%;
}

.activityPage__container swiper {
  height: 100%;
}

.activityPage__container swiper-item {
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 100%;
}

.activity-items .item-container {
  position: relative;
  height: 100%;
  background-color: #fff;
  /*提供圆角*/
  border-radius: 10px;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  -ms-border-radius: 10px;
  -o-border-radius: 10px;
}

.slide-image {
  position: relative;
  width: 100%;
  height: 350rpx;
  /*提供圆角*/
  border-radius: 10px 10px 0 0;
  -webkit-border-radius: 10px 10px 0 0;
  -moz-border-radius: 10px 10px 0 0;
  -ms-border-radius: 10px 10px 0 0;
  -o-border-radius: 10px 10px 0 0;
}

.activity-content {
  padding: 30rpx 50rpx;
}

.activity-content .activity-theme {
  line-height: 46rpx;
  text-align: center;
  font-size: 38rpx;
  letter-spacing: 3rpx;
}

.activity-content .activity-sponsor,
.activity-content .activity-address,
.activity-content .activity-date {
  margin-top: 20rpx;
  padding: 0 20rpx;
  text-align: center;
  font-size: 28rpx;
  letter-spacing: 3rpx;
}

.activity-content .activity-avatar__items {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

.activity-content .activity-avatar__item {
  margin-right: 20rpx;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid #d2d2d2;
}

.extend {
  display: flex;
  align-items: flex-end;
  padding-bottom: 8rpx;
  font-size: 24rpx;
}

.activity-content .activity-person {
  margin-top: 30rpx;
  text-align: center;
  font-size: 26rpx;
  color: #727272;
  letter-spacing: 3rpx;
}

.activityPage__container .activity-bar {
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  padding: 20rpx;
  border-top: 1rpx solid #e2e2e2;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.activityPage__container .activity-bar--btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  font-weight: 400;
  letter-spacing: 3rpx;
  background-color: #65c294;
}

.activityPage__container .activity-bar--tab {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
}

.activityPage__container .activity-bar--tab .tab-ico {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  line-height: 80rpx;
}
